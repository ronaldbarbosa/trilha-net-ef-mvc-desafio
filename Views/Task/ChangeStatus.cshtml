@model trilha_net_ef_mvc_desafio.Models.Task;

@{
    ViewData["Title"] = "Change Status";
}

<h2>Change Status</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(task => task.Title)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(task => task.Title)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(task => task.Description)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(task => task.Description)
        </dt>
    </dl>
</div>
<hr />
<div class="row">
    <div class="col md-4">
        <form asp-action="ChangeStatus">
            <label asp-for="Status" class="control-label"></label>
            <select asp-for="Status" class="form-select my-2 w-75">
                <option value="Pending">Pending</option>
                <option value="InProgress">In Progress</option>
                <option value="Done">Done</option>
            </select>
            <div class="from-group">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
                <input type="submit" value="Change Status" class="btn btn-success">
            </div>
        </form>
    </div>
</div>

